// AUTHOR - MANTHAN

#include<bits/stdc++.h>
using namespace std;

#define ll long long

int main(){
   ll n,x;
   cin >> n >> x;
   vector< ll > v(n);
   ll sum = 0 , ans = 0 , k = 0;
   for( ll i = 0 ; i < n ; i++ ){
        cin >> v[i];
        sum += v[i];
        if( sum > x ){
            while( sum > x ){
                sum -= v[k];
                k++;
            }
        }
        if( sum == x ) ans++;
   }
    cout << ans << endl;
}
